extends ../layouts/application.pug

block content
  h2.display-4.fw-bold.mt-4= t('views.labels.edit.change')
  +formFor()(action= `/labels/${label.id}` method='post')
    +input(label, 'name', errors, t('views.labels.new.name'))(type="text")
    input(name="_method" type="hidden" value='patch')
    +submit(label)(value=t('views.labels.edit.changeButton'))