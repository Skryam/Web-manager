extends ../layouts/application.pug

block content
  h2.display-4.fw-bold.mt-4= t('views.statuses.edit.change')

  +formFor()(action= `/statuses/${data.id}` method='post')
    +input(data, 'name', errors, t('views.statuses.new.name'))(type="text")
    input(name="_method" type="hidden" value='patch')
    +submit(data)(value=t('views.statuses.edit.changeButton'))