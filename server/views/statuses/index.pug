extends ../layouts/application.pug

block content
  h2.display-4.fw-bold.mt-4= t('views.statuses.status')

  table.table.table-borderless.table-striped.mt-5.bg-white
    thead
      tr
        th= 'id'
        th= 'name'
        th= 'date'
    tbody
      tr
        td= 'user.id'
        td= 'user.email'
        td= 'formatDate(user.createdAt)'