extends ../layouts/application.pug

block content
  h2.display-4.fw-bold.mt-4= 'TASK VIEW'
  .row.mt-5.p-5.shadow.bg-white
    .col-12.col-md-8.order-2.order-md-1
      .lead.fw-normal.mb-4= task.description
    .ol-12.col-md-4.border-start.px-3.order-1.order-md-2.mb-3.mb-md-0
      .mb-2
        span.me-1.badge.bg-danger.text-white= task.status.name
      .d-flex.flex-wrap.mb-3
        span.text-muted.me-2= 'Author email'
        span= task.creator.email
      .d-flex.flex-wrap.mb-3
        span.text-muted.me-2= 'Executor'
        span= task.executor.email
      .d-flex.flex-wrap.mb-3
        span.text-muted.me-2= 'creation date'
        span= task.createdAt
      .d-flex.flex-wrap
        a.btn.btn-primary.me-1(href=`/tasks/${task.id}/edit`)= 'editbtn'
        form(action= `/tasks/${task.id}`, method="post")
          input(name="_method" type="hidden" value='delete')
          input.btn.btn-danger(type='submit', value='deletebtn')