extends ../layouts/application.pug

block content
  h2.display-4.fw-bold.mt-4= t('views.tasks.title')
  a.btn.btn-primary.mb-5(href=route('newTask'))= t('views.tasks.create')

  .card.shadow-sm
    .card-body.p-4
      +formFor()(action=route('tasks') method='get')
        .row
          .col-12.col-md
            +filterSelect(statuses, 'status', errors = {}, t('views.tasks.edit.status'), 'name', filter.statusId)
          .col-12.col-md
            +filterSelect(users, 'executor', errors = {}, t('views.tasks.edit.executor'), 'email', filter.executorId)
          .col-12.col-md
            +filterSelect(labels, 'label', errors = {}, t('views.tasks.edit.labels'), 'name', filter.label)
        .mb-3.form-check
          input(
            id= 'data_isCreatorUser'
            class='form-check-input'
            type='checkbox'
            name='isCreatorUser'
            checked= filter.isCreatorUser
          )
          label(
            class='form-check-label'
            for='data_isCreatorUser'
          )= 'My tasks'

        +submit(tasks)(value= 'submitBtn')

  table.table.table-borderless.table-striped.mt-5.bg-white
    thead
      tr
        th= 'ID'
        th= t('views.tasks.name')
        th= t('views.tasks.status')
        th= t('views.tasks.creator')
        th= t('views.tasks.executor')
        th= t('views.tasks.createdAt')
        th= ''
    tbody
      each task in tasks
        - const getName = (name) => task.name ? task.name : ''
        tr
          td= task.id
          td
            a(href=`/tasks/${task.id}`)= task.name
          td= task.status.name
          td= task.creator.email
          td= task.executor ? task.executor.email : ''
          td= formatDate(task.createdAt)
          td
            div.d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=`/tasks/${task.id}/edit`)= t('views.tasks.editbtn')
              form(action= `/tasks/${task.id}`, method="post")
                input(name="_method" type="hidden" value='delete')
                input.btn.btn-danger(type='submit', value= t('views.tasks.delete'))