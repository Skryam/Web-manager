extends ../layouts/application.pug

block content
  h2.display-4.fw-bold.mt-4= 'TASK EDIT'
  +formFor()(action= `/tasks/${task.id}` method='post')
    +input(task, 'name', errors, 'name')(type="text")
    +textarea(task, 'description', errors = {}, 'description')(rows=3)
    +select(statuses, 'statusId', errors = {}, 'status', 'name', task.status.id)
    +select(users, 'executorId', errors = {}, 'executor', 'email', task.executor.id)
    input(name="_method" type="hidden" value='patch')
    +submit(task)(value='submitBtn')