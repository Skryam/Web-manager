extends ../layouts/application.pug

block content
  h2.display-4.fw-bold.mt-4= 'TASK CREATION'
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', errors, 'name')(type="text")
    +textarea(task, 'description', errors, 'description')(rows=3)
    +select(statuses, 'status_id', errors = {}, 'status', 'name')
    +select(users, 'executor_id', errors = {}, 'executor', 'email')
    +submit(task)(value='submitBtn')
