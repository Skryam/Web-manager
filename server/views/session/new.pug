extends ../layouts/application.pug

block content
  h2.display-4.fw-bold.mt-4= t('views.session.new.signIn')
  +formFor()(action=route('session') method='post')
    +input(signInForm, 'email', errors, t('views.session.new.email'))(type="text")
    +input(signInForm, 'password', {}, t('views.session.new.password'))(type="password")
    +submit(signInForm)(value=t('views.session.new.submit'))
