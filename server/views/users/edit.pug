extends ../layouts/application.pug

block content
  card
    .container.mt-5
      .card
        .card-header
          h2= t('views.users.edit.cardName')
        .card-body
          form(action= route('patchUser') method="post")
            .form-group
              input(name="_method" type="hidden" value='patch')
              label(for="data_firstName")
              input.form-control(type="text" id="data_firstName" name="data[firstName]" placeholder="Enter first name")
            .form-group
              label(for="data_lastName") 
              input.form-control(type="text" id="data_lastName" name="data[lastName]" placeholder="Enter last name")
            .form-group
              label(for="data_email") 
              input.form-control(type="email" id="data_email" name="data[email]" placeholder="Enter email")
              label(for="data_password") 
              input.form-control(type="password" id="data_password" name="data[password]" placeholder="password")
            button.btn.btn-primary(type="submit") 
            a.btn.btn-secondary(href="#") 
